    <script type="text/javascript">
        $(function () {
            
            $('#Booking').mousedown(function () {
                navigate("/Booking/index");
            });

            $('#About').mousedown(function () {
                navigate("/Home/About");
            });

            $('#Contact').mousedown(function () {
                navigate("/Home/Contact");
            });

            $('#User').mousedown(function () {
                navigate("/User/Index");
            });

            $('#login').mousedown(function () {
                navigate("/Account/Login");
            });
            
            $('#logoff').mousedown(function () {
                navigate("/Account/Logoff");
            });

            $('#Place').click(function (event) {
                event.preventDefault();
                navigate("/Place/Index");
            });

            $('#Bookings').click(function (event) {
                event.preventDefault();
                navigate("/Booking/Index");
            });

            function navigate(uri) {
                var options = {
                    url: uri
                };
                $.ajax(options).done(function (data) {

                    $('#slidingSection').fadeOut(500, function () {
                        $('#slidingSection').replaceWith(data);
                        $('#slidingSection').fadeIn(500);
                    });


                });

            };

        });

    </script>

