    <script type="text/javascript">
        $(function ()
        {
            var $form = $(this);

            $('#abt').click(function (event)
            {
                event.preventDefault();
                $('#slidingSection').effect('slide', { direction: "left", mode: "hide" }, 1500,ajaxSubmit);
                             
            });

            function ajaxSubmit()
            {

                var options = {
                                type:"POST",
                                url: "@Url.Action("About","Home")"

                };

                $.ajax(options).done(function (data)
                {
                    $('#slidingSection').replaceWith(data);

                    //$('#slidingSection').effect('slide', { direction: "left", mode: "hide" }, 1500,callback(data));
                })

            }
            function callback(data) {
                $('#slidingSection').replaceWith(data);
            }
           
        });
        </script>
<body>
    <div id="container"> 
  <!-- Begin Header Wrapper -->
  <div id="page-top">
    <div id="header-wrapper"> 
      <!-- Begin Header -->
      <div id="header">
        <div id="logo">
            <a href="Index/Home">
            <img src="~/style/images/Art/Tour.png" alt="MyTour"/>
           </a></div>
        <!-- Logo --> 
