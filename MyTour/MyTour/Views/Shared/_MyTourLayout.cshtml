            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li id="abt">@Html.ActionLink("About us", "About", "Home")</li>
            <li>@Html.ActionLink("Places", "Place", "Place")</li>
            <li><a href="contact.html">@Html.ActionLink("Contact", "Contact", "Home")</a></li>
          </ul>
        </div>
      </div>
      <!-- End Menu --> 
      </div>
      <!-- End Header --> 
    </div>
  </div>
  <!-- End Header Wrapper --> 
  
  <!-- Body -->
  <form method="post" action="@Url.Action("About","Home")" data-otf-ajax="true" data-otf-target="#slidingSection">
  <div id="slidingSection" class="test">
  @RenderBody()
  </div>
  </form>
</div>
