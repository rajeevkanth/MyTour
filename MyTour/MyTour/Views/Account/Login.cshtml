@model MyTour.Models.LoginModel
@{
    Layout = "/Views/Shared/_myTourContentLayout.cshtml";
    ViewBag.Title = "Login";
}

<div id="slidingSection">
<div id="wrapper">
    <div class="content">
        <section>
            <h2>Please Login.</h2>
            
            <div class="user-login">
            <div id="login-form"> 
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) 
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="labels">
                        <p>
                            @Html.LabelFor(p => p.UserName)
                            <br/>
                            @Html.EditorFor(p => p.UserName)
                            @Html.ValidationMessageFor(p => p.UserName)
                        </p>
                        <p>
                            @Html.LabelFor(p => p.Password)
                            <br/>
                            @Html.EditorFor(p => p.Password)
                            @Html.ValidationMessageFor(p => p.Password)
                        </p>
                        
                        <input id="submit-button" class="button gray stripe"  type="submit" value="Login" />
                        <br />
                        <br>
                        @Html.ActionLink("Register", "Register") if you don't have an account.
                    </div>    
                
                 
                }
            </div>
           </div>
        </section>
    </div>
    
    <div class="clearfix"></div>

    <div class="push"></div>
</div>
</div>
